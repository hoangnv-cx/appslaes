<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textSize="35dp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If's easier to sign up now"
                android:layout_marginBottom="30dp"/>
            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:background="@drawable/lg_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/facebook"
                    android:padding="5dp"
                    android:tint="#fff"/>
                <Button
                    android:id="@+id/btnFacebooke"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAllCaps="false"
                    android:text="Continue with Facebook"
                    android:background="#00FFFFFF"
                    android:textColor="#fff"
                    android:textSize="15dp"

                    />
            </RelativeLayout>
            <Button
                android:id="@+id/btnNextSignUp"
                android:textAllCaps="false"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:background="@drawable/su_btn"
                android:text="I'll user email of phone"
                android:textColor="#7C7474"
                android:layout_marginTop="20dp"
                android:textSize="14dp"
                android:layout_marginBottom="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgGoogle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/google_plus"/>
                <ImageView

                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon"/>
                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/linkedin"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have account?"
                android:textSize="15dp"/>
            <TextView
                android:textColor="#6396BF"
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="15dp"
                android:paddingLeft="5dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>